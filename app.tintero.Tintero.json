{
  "app-id": "app.tintero.Tintero",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "app",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--env=GDK_BACKEND=wayland,x11",
    "--env=WEBKIT_DISABLE_DMABUF_RENDERER=1",

    "--filesystem=xdg-documents",
    "--filesystem=xdg-download",
    "--filesystem=xdg-desktop",
    "--filesystem=/media",
    "--filesystem=/run/media"
  ],
  "modules": [
    {
      "name": "tintero",
      "buildsystem": "simple",
      "build-commands": [
        "ar x Tintero.deb",
        "tar xf data.tar.*",
        "cp -r usr/* /app/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://github.com/fnadalrod/Releases-Tintero/releases/download/0.8.0.1/Tintero.deb",
          "sha256": "f35c052d568a91db271075fdec1d4b8c799e5ba0222f4f428accbfde3b8ad6c0",
          "dest-filename": "Tintero.deb"
        }
      ]
    }
  ]
}