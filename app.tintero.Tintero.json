{
  "app-id": "app.tintero.Tintero",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "app",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=all",
    "--env=WEBKIT_DISABLE_COMPOSITING_MODE=1",
    "--persist=.local/share/com.tintero.app"
  ],
  "modules": [
    {
      "name": "tintero",
      "buildsystem": "simple",
      "only-arches": ["x86_64"],
      "build-commands": [
        "ar x Tintero_0.1.8_amd64.deb",
        "tar xf data.tar.*",
        "cp -r usr/* /app/",
        "install -Dm644 app.tintero.Tintero.desktop /app/share/applications/app.tintero.Tintero.desktop",
        "install -Dm644 app.tintero.Tintero.png /app/share/icons/hicolor/512x512/apps/app.tintero.Tintero.png"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://github.com/fnadalrod/Releases-Tintero/raw/master/releases/0.1.8/linux/Tintero_0.1.8_amd64.deb",
          "sha256": "427811ea49ff93d318f6229ff8341a952b530cfc84c76bcfcaba7d8bc1ef3db9"
        },
        {
          "type": "file",
          "url": "https://github.com/fnadalrod/Releases-Tintero/raw/master/releases/app.tintero.Tintero.desktop",
          "sha256": "159436cac18189e0757d08c4dd388b0e0ae0a333bfa4d656876dc21444c3ff42"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/fnadalrod/Releases-Tintero/master/releases/app.tintero.Tintero.png",
          "sha256": "5540783b09bfe735340d8b0fa15e85b63b1407ea1c086eb31b05636cf79b4a29"
        }
      ]
    }
  ]
}