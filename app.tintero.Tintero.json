{
  "app-id": "app.tintero.Tintero",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "app",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--env=WEBKIT_DISABLE_COMPOSITING_MODE=1"
  ],
  "modules": [
    {
      "name": "tintero",
      "buildsystem": "simple",
      "only-arches": ["x86_64"],
      "build-commands": [
        "ar x Tintero_0.2.0_amd64.deb",
        "tar xf data.tar.*",
        "cp -r usr/* /app/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "Tintero_0.2.0_amd64.deb"
        }
      ]
    }
  ]
}