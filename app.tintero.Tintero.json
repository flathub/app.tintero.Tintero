{
  "app-id": "app.tintero.Tintero",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "app",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--env=GDK_BACKEND=wayland,x11",
    "--env=WEBKIT_DISABLE_DMABUF_RENDERER=1",

    "--filesystem=home",

    "--filesystem=/usr/share/hunspell:ro",
    "--filesystem=/usr/share/aspell:ro",
    "--filesystem=/usr/share/myspell:ro",
    "--filesystem=/usr/lib/aspell:ro",
    "--filesystem=/usr/lib/x86_64-linux-gnu/aspell:ro",
    "--filesystem=/usr/share/dict:ro",

    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.FileManager1",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "modules": [
    {
      "name": "tintero",
      "buildsystem": "simple",
      "build-commands": [
        "ar x Tintero.deb",
        "tar xf data.tar.*",
        "cp -r usr/* /app/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://github.com/fnadalrod/Releases-Tintero/releases/download/0.8.0/Tintero.deb",
          "sha256": "5b6abd4758edf36f9421e6a71d40b411cb01ce98af4513ff1314a7452fe7505c",
          "dest-filename": "Tintero.deb"
        }
      ]
    }
  ]
}